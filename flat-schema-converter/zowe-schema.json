{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Zowe configuration file",
    "description": "Configuration file for Zowe (zowe.org) version 2.",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "components": {
            "type": "object",
            "properties": {
                "gateway": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "description": "Whether to enable or disable this component",
                            "default": false
                        }
                    }
                },
                "othernested": {
                    "type": "number"
                }
            },
            "additionalProperties": false
        },
        "othertop": {
            "type": "number"
        }
    },
    "$defs": {
        "port": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535
        },
        "component": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "description": "Whether to enable or disable this component",
                    "default": false
                }
            }
        }
    }
}